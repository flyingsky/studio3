<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<fragment>
   <extension-point id="deployWizards" name="%deployWizards.extension.name" schema="schema/deployWizards.exsd"/>

 <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="com.aptana.deploy.internal.handlers.RunDeployWizardHandler"
            id="com.aptana.deploy.commands.deploywizard"
            name="%DeployWizard.label">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
            <menuContribution
            locationURI="menu:com.aptana.explorer.deploy?endof=group.wizard">
         <command
               commandId="com.aptana.deploy.commands.deploywizard"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false">
                     <and>
                        <adapt
                              type="org.eclipse.core.resources.IResource">
                        </adapt>
                        <not>
                           <or>
                              <test
                                    property="org.eclipse.core.resources.projectNature"
                                    value="com.appcelerator.titanium.desktop.nature">
                              </test>
                              <test
                                    property="org.eclipse.core.resources.projectNature"
                                    value="com.appcelerator.titanium.mobile.nature">
                              </test>
                           </or>
                        </not>
                     </and>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      </extension>
</fragment>
